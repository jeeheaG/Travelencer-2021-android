<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgSetting"
            android:layout_width="36dp"
            android:layout_height="51dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_setting"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnLoingAndRegister"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_shape"
            android:layout_margin="10dp"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/hcmalang"
            android:text="로그인 &amp; 회원가입"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRAVELENCER"
            android:textSize="45sp"
            android:gravity="center"
            android:layout_marginBottom="130dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_light_bulb"/>
            <ImageView
                android:id="@+id/imgQR"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:src="@drawable/ic_user_yelllow"/>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_photo"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSearchPlace"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:text="여행지 검색"
            android:textSize="30sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/hcmalang"
            android:background="@drawable/btn_shape"
            android:layout_marginBottom="25dp"/>
        <Button
            android:id="@+id/btnFeed"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:text="여행 피드"
            android:textSize="30sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/hcmalang"
            android:background="@drawable/btn_shape"
            android:layout_marginBottom="25dp"/>
        <Button
            android:id="@+id/btnMyPost"
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:text="나의 여행 일지"
            android:textSize="30sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/hcmalang"
            android:background="@drawable/btn_shape"/>
    </LinearLayout>

</LinearLayout>