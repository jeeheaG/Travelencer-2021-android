<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="51dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_double_arrow"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="30sp"
        android:textColor="#046EEE"
        android:fontFamily="@font/hcmalang"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="#707070"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">
        <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="이메일 아이디"
            android:gravity="center"
            android:background="#FFFAE3"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="#FFFAE3"
            android:hint="비밀번호"
            android:gravity="center"
            android:layout_marginBottom="20dp" />
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_shape"
            android:text="로그인"
            android:textSize="25sp"
            android:textColor="#046EEE"
            android:fontFamily="@font/hcmalang"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀 번호 찾기"
            android:fontFamily="@font/hcsantteut"
            android:textSize="15sp"
            android:gravity="center"
            android:linksClickable="true"
            android:autoLink="web" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원이 아니신가요?"
            android:textSize="15sp"
            android:fontFamily="@font/hcsantteut"
            android:gravity="center"
            android:linksClickable="true"
            android:autoLink="web"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_shape"
            android:text="회원가입"
            android:textSize="25sp"
            android:textColor="#046EEE"
            android:fontFamily="@font/hcmalang"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>

</LinearLayout>